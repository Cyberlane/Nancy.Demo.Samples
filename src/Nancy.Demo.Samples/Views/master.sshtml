<!DOCTYPE html>
<html>
    <head>
        <title>Nancy.Demo.Samples</title>

        <link href="@Path['~/content/css/bootstrap.min.css'];" rel="stylesheet">
        <link href="@Path['~/content/css/font-awesome.css'];" rel="stylesheet">
        <link href="@Path['~/content/css/jquery.fancybox.css'];" rel="stylesheet">
        <link href="http://yandex.st/highlightjs/7.3/styles/default.min.css" rel="stylesheet" >

        <style type="text/css">
            
            body {
                padding-top: 60px;
				padding-bottom: 40px;
            }
	      
            .home-discover {
                background: whitesmoke;
            }

            li [class^="icon-"], .the-icons li [class*=" icon-"] {
                width: 32px;
                font-size: 16px;
            }

            li [class^="icon-"], li [class*=" icon-"] {
                display: inline-block;
                width: 1.25em;
                text-align: center;
            }

            i, cite, em, var, address, dfn {
                font-style: italic;
            }

            .list-head {
                margin-left: 60px;
            }

            .list-meta {
                color: #777;
                margin-top: 0px;
                font-size: 13px;
                }

            .widget ul {
                list-style: none;
                margin: 15px -15px 0;
                padding: 0px 10px;
                position: relative;
            }

            .avatar {
                margin-top: 2px;
                border-radius: 15px;
                width: 48px;
                height: 48px;
                }

            .container div.widget {
                width: 380px;
            }

            .readme {
                margin-top: 20px;
            }

			.container .bulk {
                background-color: white;
            }

            .container .readme {
                display: none;
            }

            .container .widget .main {
                display: block;
            }

            .widget .main {
                display: none;
            }

            .widget {
                border: 1px solid #ddd;
                border-radius: 3px;
                padding: 15px;
                background: #fff;
                float: left;
                margin: 5px 5px;
            }

            .widget h3, h1 {
                font-weight: normal;
                color: #dd390d;
                font-size: 20px;
                line-height: 1.3;
                margin: 0;
                font-size: 20px;
                line-height: 1.3;
                }

            html h1, html h2, html h3, html h4 {
                font-family: 'proxima-nova', 'Helvetica Neue', Helvetica,Arial, sans-serif;
                color: #111;
                text-rendering: optimizelegibility;
            }

            .widget h3 a {
                font-weight: normal;
                color: #dd390d;
            }

			.widgets {
				background-color: pink;
				overflow: hidden;
			}
        </style>

    </head>
    <body class="home-discover">
        
        <div class="navbar navbar-fixed-top">
          <div class="navbar-inner">
            <div class="container">
              <a class="brand" href="/">Nancy.Demo.Samples</a>
                <ul class="nav">
                    <li><a href="/">Home</a></li> 
                    <li><a href="/about">About</a></li>
					<li><a href="/contributors">Contributors</a></li>
                    <li><a href="/">How to contribute</a></li>
                </ul>
				<div  class="pull-right">
					<ul class="nav">
						@If.Context.CurrentUser
							<li><a href="/logout">Log out</a></li>
						@EndIf
						@IfNot.Context.CurrentUser
							<li><a href="/login">Log in</a></li>
						@EndIf
					</ul>
				</div>
            </div>
          </div>
        </div>

        <div class="container bulk">
            @Section['Content']
        </div>
        
        <script src="http://code.jquery.com/jquery-latest.js"></script>
        <script src="http://yandex.st/highlightjs/7.3/highlight.min.js"></script>
        <script src="@Path['~/content/js/bootstrap.min.js'];"></script>
        <script src="@Path['~/content/js/jquery.fancybox.pack.js'];"></script>
        <script src="@Path['~/content/js/knockout-2.2.0.js'];"></script>
		<script src="@Path['~/content/js/moment.min.js'];"></script>
		<script src="@Path['~/content/js/jquery.masonry.min.js'];"></script>

		<script>
			@Section['Scripts']
		</script>

    </body>
</html>