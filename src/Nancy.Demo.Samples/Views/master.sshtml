<!DOCTYPE html>
<html>
	<head>
		<title>Nancy.Demo.Samples</title>

		<link href="@Path['~/content/css/bootstrap.min.css'];" rel="stylesheet">
		<link href="@Path['~/content/css/font-awesome.css'];" rel="stylesheet">
		<link href="@Path['~/content/css/jquery.fancybox.css'];" rel="stylesheet">
		<link href="http://yandex.st/highlightjs/7.3/styles/default.min.css" rel="stylesheet" >

		<style type="text/css">
			
			body {
				padding-top: 60px;
				padding-bottom: 40px;
			}
		  
			.home-discover {
				background: whitesmoke;
			}

			li [class^="icon-"], .the-icons li [class*=" icon-"] {
				width: 32px;
				font-size: 16px;
			}

			li [class^="icon-"], li [class*=" icon-"] {
				display: inline-block;
				width: 1.25em;
				text-align: center;
			}

			i, cite, em, var, address, dfn {
				font-style: italic;
			}

			.list-head {
				margin-left: 60px;
			}

			.list-meta {
				color: #777;
				margin-top: 0px;
				font-size: 13px;
			}


			.avatar {
				margin-top: 2px;
				border-radius: 15px;
				width: 48px;
				height: 48px;
			}

			.readme {
				margin-top: 20px;
			}

			.containerx {
				margin: 0 190px;
			}

			.containerx .bulk {
				background-color: white;
			}

			.containerx .readme {
				display: none;
			}

			.modal .readme {
				display: block;
			}

			.containerx .packages {
				display: none;
			}

			.containerx div.widget {
				width: 380px;
			}

			.containerx .widget .main {
				display: block;
			}

			html h1, html h2, html h3, html h4 {
				font-family: 'proxima-nova', 'Helvetica Neue', Helvetica,Arial, sans-serif;
				color: #111;
				text-rendering: optimizelegibility;
			}

			.widgets {
				background-color: pink;
				overflow: hidden;
			}

			.widget {
				border: 1px solid #ddd;
				border-radius: 3px;
				padding: 15px;
				background: #fff;
				float: left;
				margin: 5px 5px;
				height: 160px;
			}
			
			.widget ul {
				list-style: none;
				margin: 15px -15px 0;
				padding: 0px 10px;
				position: relative;
			}

			.widget .main {
				display: none;
			}

			.widget h3, h1 {
				font-weight: normal;
				color: #dd390d;
				font-size: 20px;
				line-height: 1.3;
				margin: 0;
				font-size: 20px;
				line-height: 1.3;
			}

			.widget h3 a {
				font-weight: normal;
				color: #dd390d;
			}

			.modal {
				left: 50%;
				margin-left: -110px;
				padding: 20px;
				opacity: 0;
				position: absolute;
  
				-webkit-transition: all 100ms ease-in;
			}

			.modal::before {
				background: rgba(0,0,0,.3);
				content: '';
				left: 0;
				opacity: 0;
				position: fixed;
				right: 0;
				top: 0;
			}

			.modal::after {
				background: white;
				border-radius: 10px;
				bottom: 0;
				box-shadow: 0 0 30px rgba(0,0,0,.5);
				content: '';
				left: 0;
				position: absolute;
				right: 0;
				top: 0;
			}

			.modal.open {
				opacity: 1;
				top: 100px;
			}

			.modal.open::before {
				bottom: 0;
				opacity: 1;
			}

			.modal .content {
				position: relative;
				z-index: 1;
			}
			
		</style>

	</head>
	<body class="home-discover">
		
		<div class="navbar navbar-fixed-top">
		  <div class="navbar-inner">
			<div class="containerx">
			  <a class="brand" href="/">Nancy.Demo.Samples</a>
				<ul class="nav">
					<li><a href="/">Home</a></li> 
					<li><a href="/about">About</a></li>
					<li><a href="/contributors">Contributors</a></li>
					<li><a href="/">How to contribute</a></li>
				</ul>
				<div  class="pull-right">
					<ul class="nav">
						@IfNotNull.Context.CurrentUser
							<li><a href="/logout">Log out</a></li>
						@EndIf
						@IfNull.Context.CurrentUser
							<li><a href="/login">Log in</a></li>
						@EndIf
					</ul>
				</div>
			</div>
		  </div>
		</div>

		<div class="containerx bulk">
			@Section['Content']
		</div>
		
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
		<script src="http://yandex.st/highlightjs/7.3/highlight.min.js"></script>
		<script src="@Path['~/content/js/bootstrap.min.js'];"></script>
		<script src="@Path['~/content/js/jquery.fancybox.pack.js'];"></script>
		<script src="@Path['~/content/js/knockout-2.2.0.js'];"></script>
		<script src="@Path['~/content/js/moment.min.js'];"></script>
		<script src="@Path['~/content/js/jquery.masonry.min.js'];"></script>

		<script>
			@Section['Scripts']
			
			ko.bindingHandlers.date = {
				update: function(element, valueAccessor) {
					$(element).html(moment(valueAccessor()).fromNow());
				}
			};

			ko.bindingHandlers.highlight = {
				update: function (element, valueAccessor) {
					var value = ko.utils.unwrapObservable(valueAccessor()) || '';
					var highlighted = hljs.highlightAuto(value).value;
					$(element).html(highlighted);
				}
			};

			ko.bindingHandlers.masonry = {
				update: function(element, valueAccessor, allBindingsAccessor) {
					var $element = $(element),
						list = ko.utils.unwrapObservable(allBindingsAccessor().foreach)
						masonry = ko.utils.unwrapObservable(valueAccessor())
		
					if ($element.data('masonry'))
						$element.masonry('destroy')
			
					if (!list.length)
						return

					$element.masonry(masonry)
				}
			}

		</script>

	</body>
</html>